package application;

import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

import entities.Comment;
import entities.Post;

public class Program {

	public static void main(String[] args) {
		
		DateTimeFormatter dtf = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm:ss");
		String moment = "21/06/2018 13:05:44";
//		LocalDateTime date = LocalDateTime.parse(moment, dtf);
//		System.out.println(date.format(dtf));
		String title = "Traveling to New Zealand";
		String content = "I'm going to visit this wonderful country!";
		int likes = 12;		
		Post post1 = new Post(moment, title, content, likes);
		Post post2 = new Post("28/07/2018 23:14:19", "Good night guys", "See you tomorrow", 5);
		
		Comment c1 = new Comment("Have a nice trip");
		Comment c2 = new Comment("Wow that's awesome!");
		Comment c3 = new Comment("Good night");
		Comment c4 = new Comment("May the Force be with you");
		
		post1.addComment(c1);
		post1.addComment(c2);
		
		post2.addComment(c3);
		post2.addComment(c4);
		
		System.out.println(post1.getTitle());
		System.out.println(post1.getLikes() + " Likes - " + post1.getMoment().format(dtf));
		
		
		

	}

}
