		//Exercício 5
		Scanner sc = new Scanner(System.in);
		int cod = sc.nextInt();
		int qtd = sc.nextInt();
		double total;
		
		if (cod == 1) {
			total = 4.00 * qtd;
		}
		else if (cod == 2) {
			total = 4.50 * qtd;
		}
		else if (cod == 3) {
			total = 5.00 * qtd;
		}
		else if (cod == 4) {
			total = 2.00 * qtd;
		}
		else {
			total = 1.50 * qtd;
		}
		System.out.printf("Total: R$ %.2f", total);
		
		sc.close();
		
		
		
		
		
		
		
		
