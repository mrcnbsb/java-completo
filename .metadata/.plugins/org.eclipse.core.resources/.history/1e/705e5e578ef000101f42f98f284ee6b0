package entities;

public class Student {
	
	public String name;
	public double note1;
	public double note2;
	public double note3;
	
	public double showFinalGrade() {
		return note1 + note2 + note3;
	}
	
	public String showResult() {
		if (showFinalGrade() >= 60) {
			return "PASS";
		} else {
			return "FAILED"
					+ String.format("%nMISSING %.2f", 60 - showFinalGrade());
		}
	}
}
