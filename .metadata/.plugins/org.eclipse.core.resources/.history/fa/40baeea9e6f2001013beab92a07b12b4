import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;

public class Data_hora {

	public static void main(String[] args) {
						
		LocalDate d01 = LocalDate.now();
		System.out.println("d01= " + d01);
		
		LocalDateTime d02 = LocalDateTime.now();
		System.out.println("d02= " + d02);
		
		Instant d03 = Instant.now();
		System.out.println("d03= " + d03);
		
		String date = "2022-07-20";
		LocalDate d04 = LocalDate.parse(date);
		System.out.println("d04= " + d04);
		
		date = "2022-07-20T01:30:26";
		LocalDateTime d05 = LocalDateTime.parse(date);
		System.out.println("d05= " + d05);
		
		date = "2022-07-20T01:30:26Z";
		Instant d06 = Instant.parse(date);
		System.out.println("d06= " + d06);
		
		date = "2022-07-20T01:30:26-03:00";
		Instant d07 = Instant.parse(date);
		System.out.println("d07= " + d07);
		
		//date customizado
		DateTimeFormatter fmt1 = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		LocalDate d08 = LocalDate.parse("20/07/2022", fmt1);
		System.out.println("d08= " + d08);

	}

}
