package model.services;

import java.time.LocalDate;

import model.entities.Contract;
import model.entities.Installment;

public class ContractService {
	
	private OnlinePaymentService onlinePaymentService;
	
	public ContractService(OnlinePaymentService onlinePaymentService) {
		this.onlinePaymentService = onlinePaymentService;
	}

	public void processContract(Contract contract, int months) {
		
		double basicQuota = contract.getTotalValue() / months;
		
		for (int i=1; i<= months; i++) {
			LocalDate dueDate = contract.getDate().plusMonths(i);						
			double interest = this.onlinePaymentService.interest(basicQuota, i); //juros
			double fee = this.onlinePaymentService.paymentFee(basicQuota + interest); //taxa
			double amount = basicQuota + fee;
			contract.addInstallment(new Installment(dueDate, amount));
		}		
	}
}
