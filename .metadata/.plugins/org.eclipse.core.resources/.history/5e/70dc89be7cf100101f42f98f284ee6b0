		}
		for (int i=0; i<vectC.length; i++) {
			vectC[i] = vectA[i] + vectB[i];
		}
		System.out.println("VETOR RESULTANTE:");
		for (int i=0; i<vectC.length; i++) {
			System.out.println(vectC[i]);
