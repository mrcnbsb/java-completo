import java.time.Duration;
import java.time.Instant;
import java.time.LocalDate;
import java.time.LocalDateTime;
import java.time.ZoneId;
import java.time.format.DateTimeFormatter;
import java.time.temporal.ChronoUnit;

public class Data_hora {

	public static void main(String[] args) {
		
		/* 
		 * data-hora java são objetos imutáveis
		 * */
						
		LocalDate d01 = LocalDate.now();
		System.out.println("d01= " + d01);
		
		LocalDateTime d02 = LocalDateTime.now();
		System.out.println("d02= " + d02);
		
		Instant d03 = Instant.now();
		System.out.println("d03= " + d03);
		
		String date = "2022-07-20";
		LocalDate d04 = LocalDate.parse(date);
		System.out.println("d04= " + d04);
		
		date = "2022-07-20T01:30:26";
		LocalDateTime d05 = LocalDateTime.parse(date);
		System.out.println("d05= " + d05);
		
		date = "2022-07-20T01:30:26Z";
		Instant d06 = Instant.parse(date);
		System.out.println("d06= " + d06);
		
		date = "2022-07-20T01:30:26-03:00";
		Instant d07 = Instant.parse(date);
		System.out.println("d07= " + d07);
		
		//date customizado
		DateTimeFormatter fmt1 = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		LocalDate d08 = LocalDate.parse("20/07/2022", fmt1);
		System.out.println("d08= " + d08);
		
		DateTimeFormatter fmt2 = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm");
		LocalDateTime d09 = LocalDateTime.parse("20/07/2022 01:30", fmt2);
		System.out.println("d09= " + d09);
		
		LocalDate d10 = LocalDate.of(2022, 07, 20);
		System.out.println("d10= " + d10);
		
		LocalDateTime d11 = LocalDateTime.of(2022, 07, 20, 11, 24);
		System.out.println("d11= " + d11);		
		
		//formatação: texto para dataHora		
		LocalDate d12 = LocalDate.parse("2022-07-20");
		LocalDateTime d13 = LocalDateTime.parse("2022-07-20T01:30:26");
		Instant d14 = Instant.parse("2022-07-20T01:30:26Z");
		
		DateTimeFormatter fmt3 = DateTimeFormatter.ofPattern("dd/MM/yyyy");
		System.out.println("d12 = " + d12.format(fmt3));
		System.out.println("d12 = " + fmt3.format(d12));
		System.out.println("d12 = " + d12.format(DateTimeFormatter.ofPattern("dd/MM/yyyy")));
		
		DateTimeFormatter fmt4 = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm");
		System.out.println("d13 = " + d13.format(fmt3));
		System.out.println("d13 = " + d13.format(fmt4));
		
		DateTimeFormatter fmt5 = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm").withZone(ZoneId.systemDefault()); //fuso do usuário
		System.out.println("d14= " + d14);
		System.out.println("d14= " + fmt5.format(d14));
		
		//Converter data-hora global para local
		//for (String s : ZoneId.getAvailableZoneIds()) {
			//System.out.println(s);
		//}
		
		//Instant d14 = Instant.parse("2022-07-20T01:30:26Z");
		LocalDate r1 = LocalDate.ofInstant(d14, ZoneId.systemDefault()); //fuso do pc
		System.out.println("r1= " + r1);
		LocalDateTime r2 = LocalDateTime.ofInstant(d14, ZoneId.systemDefault());
		System.out.println("r2= " + r2);
		LocalDate r3 = LocalDate.ofInstant(d14, ZoneId.of("Portugal"));
		System.out.println("r3= " + r3);
		LocalDateTime r4 = LocalDateTime.ofInstant(d14, ZoneId.of("Portugal"));
		System.out.println("r4= " + r4);
		
		//obter dados de uma data local
		//LocalDate d12 = LocalDate.parse("2022-07-20");
		//LocalDateTime d13 = LocalDateTime.parse("2022-07-20T01:30:26");		
		System.out.println("d12 dia = " + d12.getDayOfMonth());
		System.out.println("d12 mês = " + d12.getMonthValue());
		System.out.println("d12 ano = " + d12.getYear());
		System.out.println("d13 hora = " + d13.getHour());
		System.out.println("d13 minuto = " + d13.getMinute());
		
		
		//cálculos com data-hora
		//LocalDate d12 = LocalDate.parse("2022-07-20");
		LocalDate pastWeekLocalDate = d12.minusDays(7);
		System.out.println("pastWeekLocaDate = " + pastWeekLocalDate);
		LocalDate nextWeekLocalDAte = d12.plusDays(7);
		System.out.println("nextWeekLocalDAte = " + nextWeekLocalDAte);
		LocalDate nextYearLocalDAte = d12.plusYears(7);
		System.out.println("nextYearLocalDAte = " + nextYearLocalDAte);
		LocalDate nextMonthLocalDAte = d12.plusMonths(7);
		System.out.println("nextMonthLocalDAte = " + nextMonthLocalDAte);
		//LocalDateTime d13 = LocalDateTime.parse("2022-07-20T01:30:26");	
		LocalDateTime pastWeekLocalDateTime = d13.minusDays(7);
		System.out.println("pastWeekLocaDateTime = " + pastWeekLocalDateTime);
		//Instant d14 = Instant.parse("2022-07-20T01:30:26Z");
		Instant pastWeekInstant = d14.minus(7, ChronoUnit.DAYS);
		System.out.println("pastWeekInstant = " + pastWeekInstant);
		Instant nextWeekInstant = d14.plus(7, ChronoUnit.DAYS);
		System.out.println("nextWeekInstant = " + nextWeekInstant);
		
		//duração
//		Duration t1 = Duration.between(pastWeekLocalDate, d12); // não funciona para localDate
//		System.out.println("t1 dias = " + t1.toDays()); 
		Duration t1 = Duration.between(pastWeekLocalDate.atTime(0, 0), d12.atStartOfDay()); // é preciso converter para LocalDateTime 
		System.out.println("t1 dias = " + t1.toDays()); 
		System.out.print("t1 dias (type) = ");
		System.out.println(type(t1.toDays()));
		Duration t2 = Duration.between(pastWeekLocalDateTime, d13);
		System.out.println("t2 dias = " + t2.toDays());
		Duration t3 = Duration.between(pastWeekInstant, d14);
		System.out.println("t3 dias = " + t3.toDays());
		Duration t4 = Duration.between(d14, pastWeekInstant);
		System.out.println("t4 dias = " + t4.toDays());
		
	}

}
