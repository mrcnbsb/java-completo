public class Strings {

	public static void main(String[] args) {
		String original = "abcde FGHIJ ABC abc DEFG   ";
		System.out.println("Original: -" + original + "-");
		
		String s1 = original.toLowerCase();
		System.out.println("toLowerCase(): -" + s1 + "-");
		
		String s2 = original.toUpperCase();
		System.out.println("toUpperCase(): -" + s2 + "-");
		
		String s3 = original.trim();
		System.out.println("trim(): -" + s3 + "-"); // elimina espaços nas extremidades da string
		
		String s4 = original.substring(2);
		System.out.println("substring(2): -" + s4 + "-");
		
		String s5 = original.substring(2, 9); // do 2 até o 9 exclusive
		System.out.println("substring(2, 4): -" + s5 + "-");
		
		String s6 = original.replace('a', 'x');
		System.out.println("replace('a', 'x'): -" + s6 + "-");

	}
}
