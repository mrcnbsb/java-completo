package application;

import java.util.LinkedHashSet;
import java.util.Set;

public class Program {

	public static void main(String[] args) {

		// Set<T>
		// não admite repetições
		// elementos não possuem posição
		// interseção, união, diferença

//		Set<String> set = new HashSet<>(); //HashSet-> implementação mais rápida, mas não garante a ordem
//		Set<String> set = new TreeSet<>(); //TreeSet-> ordena os dados
		Set<String> set = new LinkedHashSet<>(); // LinkedHashSet-> mantem a ordem de inserção
		set.add("TV");
		set.add("Tablet");
		set.add("Notebook");

		System.out.println(set.contains("Notebook"));

		System.out.println("----------");
		for (String p : set) {
			System.out.println(p);
		}

		set.remove("Tablet");

		System.out.println("----------");
		for (String p : set) {
			System.out.println(p);
		}

	}
}
