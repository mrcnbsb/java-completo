package application;

import entities.Account;
import entities.BusinessAccount;
import entities.SavingsAccount;

public class Program {

	public static void main(String[] args) {
		
		Account acc = new Account(1001, "Alex", 0.0);
		BusinessAccount bacc = new BusinessAccount(1002, "Maria", 0.0, 500.0);
		
		//UPCASTING: da subclasse para a superclasse		
		Account acc1 = bacc;
		acc1.getBalance(); //conta empresaria é uma conta
		Account acc2 = new BusinessAccount(1003, "Bob", 0.0, 200.0);
		Account acc3 = new SavingsAccount(1004, "Anna", 0.0, 0.01);
		
		//DOWNCASTING: da superclasse para a subclasse
		//BusinessAccount acc4 = acc2; //compilador não permite (conversão não é natural)
		BusinessAccount acc4 = (BusinessAccount)acc2; //casting
		acc4.loan(100.0);
		
		BusinessAccount acc5 = (BusinessAccount)acc3;
	
		

	}

}
